<h2><%= @character.name %></h2>

 <%= form_for [@house, @character] do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <br>
   <%= f.label :quote %>
   <%= f.text_field :quote %>
   <br>
   <%= f.label :title %>
   <%= f.text_field :title %>
   <br>
   <%= f.submit "Update" %> <%= link_to "Cancel", house_character_path(@house, @character) %>
 <% end %>



<%= link_to 'He who cast the sentence, should swing the sword', house_character_path(@house, @character),
            data: {:confirm => 'Any Final Words My Lord?'}, :method => :delete %>
